{
    "mcp": {
        "servers": {
            "colonyforge": {
                "type": "stdio",
                "command": "python",
                "args": [
                    "-m",
                    "colonyforge.cli",
                    "mcp"
                ],
                "cwd": "/workspace/ColonyForge",
                "env": {
                    "PYTHONPATH": "/workspace/ColonyForge/src"
                }
            }
        }
    },
    "chat.mcp.access": "all",
    // Docker Desktop を使用（WSL 2 backend）
    // Docker Desktop があれば WSL 内の Docker は不要
    "dev.containers.executeInWSL": false,
    // Docker 拡張機能: Docker Desktop のデフォルトコンテキストを使用
    "dev.containers.dockerPath": "",
    "chat.tools.terminal.autoApprove": {
        "/^cd /workspace/ColonyForge/vscode-extension && npm run lint 2>&1 \\| tail -10$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^cd /workspace/ColonyForge/vscode-extension && npm run compile 2>&1 && npm run lint 2>&1$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^cd /workspace/ColonyForge/vscode-extension && npm run lint 2>&1 \\| tail -5$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^cd /workspace/ColonyForge/vscode-extension && npx tsc -p \\./ --noEmit 2>&1; echo \"EXIT:\\$\\?\"$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^cd /workspace/ColonyForge/vscode-extension && npx eslint src --ext ts 2>&1; echo \"EXIT:\\$\\?\"$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^cd /workspace/ColonyForge/vscode-extension && npx eslint src/chatHandler\\.ts 2>&1; echo \"LINT_EXIT:\\$\\?\"$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^cd /workspace/ColonyForge/vscode-extension && npx eslint src/chatHandler\\.ts 2>&1 \\| wc -l && npx eslint src/chatHandler\\.ts 2>&1 \\| grep -c \"error\\\\\\|warning\" \\|\\| true$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^docker inspect colonyforge-dev-ollama 2>/dev/null \\| python3 -c \"\nimport sys, json\nd = json\\.load\\(sys\\.stdin\\)\\[0\\]\nns = d\\.get\\('NetworkSettings', \\{\\}\\)\nprint\\('IPAddress:', ns\\.get\\('IPAddress'\\)\\)\nprint\\('Networks:', json\\.dumps\\(ns\\.get\\('Networks', \\{\\}\\), indent=2\\)\\)\nprint\\('Ports:', json\\.dumps\\(ns\\.get\\('Ports', \\{\\}\\), indent=2\\)\\)\nprint\\('HostConfig\\.NetworkMode:', d\\.get\\('HostConfig', \\{\\}\\)\\.get\\('NetworkMode'\\)\\)\n\"$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^# 現在のdevcontainerのネットワーク確認\ndocker inspect colonyforge_devcontainer-colonyforge-dev-1 --format '\\{\\{json \\.NetworkSettings\\.Networks\\}\\}' 2>/dev/null \\| python3 -m json\\.tool 2>/dev/null \\| head -20$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "/^# OllamaコンテナのIPアドレスをdocker execで取得してみる\ndocker exec colonyforge-dev-ollama cat /etc/hosts 2>&1 \\| tail -5\necho \"---\"\n# OllamaコンテナのNetworkModeと現状確認\ndocker inspect colonyforge-dev-ollama 2>/dev/null \\| python3 -c \"\nimport sys, json\nd = json\\.load\\(sys\\.stdin\\)\\[0\\]\nhc = d\\.get\\('HostConfig', \\{\\}\\)\nprint\\('NetworkMode:', hc\\.get\\('NetworkMode'\\)\\)\nprint\\('PortBindings:', json\\.dumps\\(hc\\.get\\('PortBindings', \\{\\}\\), indent=2\\)\\)\nns = d\\.get\\('NetworkSettings', \\{\\}\\)\nprint\\('IPAddress:', ns\\.get\\('IPAddress'\\)\\)\nfor name, info in ns\\.get\\('Networks', \\{\\}\\)\\.items\\(\\):\n    print\\(f'Network: \\{name\\}, IP: \\{info\\.get\\(\\\\\"IPAddress\\\\\"\\)\\}'\\)\n\"$/": {
            "approve": true,
            "matchCommandLine": true
        },
        "npm run lint": true
    }
}