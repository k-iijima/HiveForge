{
  "name": "colonyforge-dashboard",
  "displayName": "ColonyForge Dashboard",
  "description": "ColonyForge 自律型ソフトウェア組立システムのダッシュボード",
  "version": "0.1.0",
  "publisher": "colonyforge",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "chatParticipants": [
      {
        "id": "colonyforge-dashboard.colonyforge",
        "fullName": "ColonyForge",
        "name": "colonyforge",
        "description": "ColonyForge自律型ソフトウェア組立システムとの対話",
        "isSticky": true,
        "commands": [
          {
            "name": "status",
            "description": "ColonyForgeのステータスを確認"
          },
          {
            "name": "hives",
            "description": "Hive一覧を表示"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "colonyforge.showDashboard",
        "title": "ColonyForge: ダッシュボードを表示",
        "icon": "$(dashboard)"
      },
      {
        "command": "colonyforge.showHiveMonitor",
        "title": "ColonyForge: Hive Monitorを表示",
        "icon": "$(type-hierarchy)"
      },
      {
        "command": "colonyforge.showAgentMonitor",
        "title": "ColonyForge: Agent Monitorを表示",
        "icon": "$(pulse)"
      },
      {
        "command": "colonyforge.startRun",
        "title": "ColonyForge: 新しいRunを開始",
        "icon": "$(add)"
      },
      {
        "command": "colonyforge.viewEvents",
        "title": "ColonyForge: イベントログを表示"
      },
      {
        "command": "colonyforge.approveRequirement",
        "title": "承認",
        "icon": "$(check)"
      },
      {
        "command": "colonyforge.rejectRequirement",
        "title": "却下",
        "icon": "$(x)"
      },
      {
        "command": "colonyforge.showRequirementDetail",
        "title": "ColonyForge: 確認要請の詳細を表示"
      },
      {
        "command": "colonyforge.toggleRunsFilter",
        "title": "完了済みを表示/非表示",
        "icon": "$(eye-closed)"
      },
      {
        "command": "colonyforge.toggleTasksFilter",
        "title": "完了済みを表示/非表示",
        "icon": "$(eye-closed)"
      },
      {
        "command": "colonyforge.toggleRequirementsFilter",
        "title": "解決済みを表示/非表示",
        "icon": "$(eye-closed)"
      },
      {
        "command": "colonyforge.toggleRunsFilterOn",
        "title": "完了済みを非表示",
        "icon": "$(eye)"
      },
      {
        "command": "colonyforge.toggleTasksFilterOn",
        "title": "完了済みを非表示",
        "icon": "$(eye)"
      },
      {
        "command": "colonyforge.toggleRequirementsFilterOn",
        "title": "解決済みを非表示",
        "icon": "$(eye)"
      },
      {
        "command": "colonyforge.completeRun",
        "title": "Runを完了",
        "icon": "$(check)"
      },
      {
        "command": "colonyforge.abortRun",
        "title": "Runを中止",
        "icon": "$(stop)"
      },
      {
        "command": "colonyforge.createTask",
        "title": "タスクを作成",
        "icon": "$(add)"
      },
      {
        "command": "colonyforge.assignTask",
        "title": "タスクを割り当て",
        "icon": "$(account)"
      },
      {
        "command": "colonyforge.updateProgress",
        "title": "進捗を更新",
        "icon": "$(dashboard)"
      },
      {
        "command": "colonyforge.completeTask",
        "title": "タスクを完了",
        "icon": "$(check)"
      },
      {
        "command": "colonyforge.failTask",
        "title": "タスクを失敗",
        "icon": "$(error)"
      },
      {
        "command": "colonyforge.toggleEventsTreeMode",
        "title": "ツリー/フラット表示切替",
        "icon": "$(list-flat)"
      },
      {
        "command": "colonyforge.toggleEventsTreeModeOn",
        "title": "フラット/ツリー表示切替",
        "icon": "$(list-tree)"
      },
      {
        "command": "colonyforge.createHive",
        "title": "ColonyForge: Hiveを作成",
        "icon": "$(add)"
      },
      {
        "command": "colonyforge.closeHive",
        "title": "ColonyForge: Hiveを終了",
        "icon": "$(close)"
      },
      {
        "command": "colonyforge.refreshHives",
        "title": "ColonyForge: Hive一覧を更新",
        "icon": "$(refresh)"
      },
      {
        "command": "colonyforge.createColony",
        "title": "ColonyForge: Colonyを作成",
        "icon": "$(add)"
      },
      {
        "command": "colonyforge.startColony",
        "title": "ColonyForge: Colonyを開始",
        "icon": "$(play)"
      },
      {
        "command": "colonyforge.completeColony",
        "title": "ColonyForge: Colonyを完了",
        "icon": "$(check)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "colonyforge.showHiveMonitor",
          "when": "view == colonyforge.hives",
          "group": "navigation@0"
        },
        {
          "command": "colonyforge.createHive",
          "when": "view == colonyforge.hives",
          "group": "navigation@1"
        },
        {
          "command": "colonyforge.refreshHives",
          "when": "view == colonyforge.hives",
          "group": "navigation@2"
        },
        {
          "command": "colonyforge.startRun",
          "when": "view == colonyforge.runs",
          "group": "navigation@1"
        },
        {
          "command": "colonyforge.toggleRunsFilter",
          "when": "view == colonyforge.runs && !colonyforge.runsShowCompleted",
          "group": "navigation@2"
        },
        {
          "command": "colonyforge.toggleRunsFilterOn",
          "when": "view == colonyforge.runs && colonyforge.runsShowCompleted",
          "group": "navigation@2"
        },
        {
          "command": "colonyforge.toggleTasksFilter",
          "when": "view == colonyforge.tasks && !colonyforge.tasksShowCompleted",
          "group": "navigation@2"
        },
        {
          "command": "colonyforge.toggleTasksFilterOn",
          "when": "view == colonyforge.tasks && colonyforge.tasksShowCompleted",
          "group": "navigation@2"
        },
        {
          "command": "colonyforge.createTask",
          "when": "view == colonyforge.tasks",
          "group": "navigation@1"
        },
        {
          "command": "colonyforge.toggleRequirementsFilter",
          "when": "view == colonyforge.requirements && !colonyforge.requirementsShowResolved",
          "group": "navigation"
        },
        {
          "command": "colonyforge.toggleRequirementsFilterOn",
          "when": "view == colonyforge.requirements && colonyforge.requirementsShowResolved",
          "group": "navigation"
        },
        {
          "command": "colonyforge.toggleEventsTreeMode",
          "when": "view == colonyforge.events && colonyforge.eventsTreeMode",
          "group": "navigation"
        },
        {
          "command": "colonyforge.toggleEventsTreeModeOn",
          "when": "view == colonyforge.events && !colonyforge.eventsTreeMode",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "colonyforge.closeHive",
          "when": "view == colonyforge.hives && viewItem == activeHive",
          "group": "inline@1"
        },
        {
          "command": "colonyforge.createColony",
          "when": "view == colonyforge.hives && viewItem == activeHive",
          "group": "inline@2"
        },
        {
          "command": "colonyforge.startColony",
          "when": "view == colonyforge.hives && viewItem == pendingColony",
          "group": "inline@1"
        },
        {
          "command": "colonyforge.completeColony",
          "when": "view == colonyforge.hives && viewItem =~ /^(runningColony|inProgressColony)$/",
          "group": "inline@1"
        },
        {
          "command": "colonyforge.approveRequirement",
          "when": "view == colonyforge.requirements && viewItem == pendingRequirement",
          "group": "inline@1"
        },
        {
          "command": "colonyforge.rejectRequirement",
          "when": "view == colonyforge.requirements && viewItem == pendingRequirement",
          "group": "inline@2"
        },
        {
          "command": "colonyforge.showDashboard",
          "when": "view == colonyforge.runs",
          "group": "inline@0"
        },
        {
          "command": "colonyforge.showAgentMonitor",
          "when": "view == colonyforge.runs",
          "group": "inline@0"
        },
        {
          "command": "colonyforge.completeRun",
          "when": "view == colonyforge.runs && viewItem == runningRun",
          "group": "inline@1"
        },
        {
          "command": "colonyforge.abortRun",
          "when": "view == colonyforge.runs && viewItem == runningRun",
          "group": "inline@2"
        },
        {
          "command": "colonyforge.assignTask",
          "when": "view == colonyforge.tasks && viewItem == pending",
          "group": "inline@1"
        },
        {
          "command": "colonyforge.updateProgress",
          "when": "view == colonyforge.tasks && viewItem =~ /^(assigned|in_progress)$/",
          "group": "inline@1"
        },
        {
          "command": "colonyforge.completeTask",
          "when": "view == colonyforge.tasks && viewItem =~ /^(assigned|in_progress)$/",
          "group": "inline@2"
        },
        {
          "command": "colonyforge.failTask",
          "when": "view == colonyforge.tasks && viewItem =~ /^(assigned|in_progress)$/",
          "group": "inline@3"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "colonyforge",
          "title": "ColonyForge",
          "icon": "resources/hive-icon.svg"
        }
      ]
    },
    "views": {
      "colonyforge": [
        {
          "id": "colonyforge.hives",
          "name": "Hives"
        },
        {
          "id": "colonyforge.runs",
          "name": "Runs"
        },
        {
          "id": "colonyforge.tasks",
          "name": "Tasks"
        },
        {
          "id": "colonyforge.requirements",
          "name": "確認要請"
        },
        {
          "id": "colonyforge.decisions",
          "name": "Decisions"
        },
        {
          "id": "colonyforge.events",
          "name": "イベントログ"
        }
      ]
    },
    "configuration": {
      "title": "ColonyForge",
      "properties": {
        "colonyforge.serverUrl": {
          "type": "string",
          "default": "http://localhost:8000",
          "description": "ColonyForge APIサーバーのURL"
        },
        "colonyforge.decisionsRunId": {
          "type": "string",
          "default": "meta-decisions",
          "description": "Decision（decision.recorded）を格納するRun ID"
        },
        "colonyforge.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "ダッシュボードを自動更新"
        },
        "colonyforge.refreshInterval": {
          "type": "number",
          "default": 5000,
          "description": "自動更新の間隔（ミリ秒）"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.0.0",
    "@types/sinon": "^21.0.0",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vscode/vsce": "^3.7.1",
    "eslint": "^9.0.0",
    "mocha": "^11.7.5",
    "sinon": "^21.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "axios": "^1.13.5"
  }
}
