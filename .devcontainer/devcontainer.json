{
  "name": "ColonyForge Dev",
  // Docker Desktop または WSL Docker で動作
  //
  // 使用方法:
  // 1. Docker Desktop を起動
  // 2. VS Code で: Dev Containers: Reopen in Container
  "dockerComposeFile": [
    "docker-compose.dev.yml"
  ],
  "service": "colonyforge-dev",
  "workspaceFolder": "/workspace/ColonyForge",
  // ワークスペースマウントはdocker-compose.dev.ymlで定義（WSLパス形式）
  // Docker ComposeモードではここでのworkspaceMountは機能しないため削除
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-python.debugpy",
        "tamasfe.even-better-toml",
        "eamodio.gitlens",
        "ms-azuretools.vscode-docker",
        "github.copilot",
        "github.copilot-chat"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.testing.pytestEnabled": true,
        "python.testing.pytestArgs": [
          "tests"
        ],
        "editor.formatOnSave": true,
        "[python]": {
          "editor.defaultFormatter": "charliermarsh.ruff"
        },
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.automationProfile.linux": {
          "path": "/bin/bash"
        },
        "docker.host": "unix:///var/run/docker.sock",
        "docker.environment": {
          "DOCKER_HOST": "unix:///var/run/docker.sock"
        }
      }
    }
  },
  "postCreateCommand": "cd /workspace/ColonyForge && pip install -e '.[dev]' && pre-commit install && mkdir -p /workspace/ColonyForge/Vault && sudo chown -R vscode:vscode /workspace/ColonyForge/Vault",
  "postStartCommand": "sudo chown root:docker /var/run/docker.sock 2>/dev/null || true; bash .devcontainer/start-ollama.sh || true",
  "waitFor": "postCreateCommand",
  "remoteEnv": {
    "PATH": "${containerEnv:PATH}:/home/vscode/.local/bin",
    "OLLAMA_HOST": "http://ollama:11434",
    "OLLAMA_BASE_URL": "http://colonyforge-dev-ollama:11434",
    "COLONYFORGE_GPU": "${localEnv:COLONYFORGE_GPU}",
    "PLAYWRIGHT_MCP_URL": "http://colonyforge-playwright-mcp:8931",
    "VLM_HEADLESS": "true"
  },
  "remoteUser": "vscode"
}
